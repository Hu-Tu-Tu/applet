page {padding-bottom: 90rpx;}
.binner {height: 65vw; text-align: center;}
.binner .binner_pic {width: 60%;}
.price {padding: 15rpx;font-size: 32rpx;font-weight: 600;color: var(--themeColor);}
.row {display: flex;}
.row .name {flex: 6;color: #666161;font-size: 30rpx;padding: 0 10rpx;display: -webkit-box;overflow: hidden;-webkit-box-orient: vertical;-webkit-line-clamp: 2;}
.row .collect {flex: 1;display: flex;flex-direction: column;justify-content: center;align-items: center;border-left: 1rpx solid #666161;}
.collect .icon-shoucangxuanzhong {color:#eb4450}

.detail {background-color: aliceblue;}
.title {font-size: 40rpx;font-weight: 600;color: var(--themeColor);padding: 30rpx;background-color: white;}

.bot {position: fixed;left: 0;bottom: 0;width: 100%;height: 90rpx;background-color: white;display: flex;border-bottom: 1rpx solid #ccc;}
.bot .bot_item {flex: 1.2;display: flex;flex-direction: column;justify-content: center;align-items: center;font-size: 24rpx;position: relative;}
.bot_item .but {position: absolute;top: 0;left: 0;opacity: 0;width: 100%;height: 100%;}
.bot .bot_car {flex: 2;justify-content: center;align-items: center;background-color: #ffa500;color: white;font-size: 30rpx;font-weight: 600;}
.bot .bot_buy {flex: 2;justify-content: center;align-items: center;background-color: #eb4450;color: white;font-size: 30rpx;font-weight: 600}
