<!-- 监听自定义事件 -->
<tabs tabs="{{tabs}}" bindtabsClick="tabsClick">
    <block wx:if="{{tabs[0].isActive}}" class="container">
        <view class="order_main">
            <view class="order_item" wx:for="{{orders}}"wx:key="*this">
                <view class="num">
                    <view class="num_txt">订单编号</view>
                    <view class="num_con">{{item.order_number}}</view>
                </view>
                <view class="price">
                    <view class="price_txt">订单价格</view>
                    <view class="price_con">￥{{item.order_price}}</view>
                </view>
                <view class="time">
                    <view class="time_txt">订单日期</view>
                    <view class="time_con">{{item.create_time}}</view>
                </view>
            </view>
        </view>
    </block>
